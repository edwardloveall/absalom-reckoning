<%= simple_form_for([:calendar, @event]) do |form| %>
  <% form_error_hint(@event) %>
  <%= label_tag(:date) %>
  <%= text_field_tag(:date, date_from_day_number(params[:occurred_on]), disabled: true) %>
  <%= form.input(
    :occurred_on,
    input_html: { value: params[:occurred_on] },
    as: :hidden
  ) %>
  <%= form.input(:title) %>
  <div class="actions">
    <%= form.submit %>
    <%= link_to(
      t('helpers.submit.event.cancel'),
      calendar_path(params[:calendar_id], date: date_from_day_number(params[:occurred_on]))
    ) %>
  </div>
<% end %>
