<aside class="sidebar">
  <% if signed_in? %>
    <%= present(current_user).calendar_list(for_current: @calendar) %>
    <% if Invitation.exists?(email: current_user.email) %>
      <%= link_to 'Invitations', invitations_path %>
    <% end %>
    <%= calendar_actions %>
    <%= present(current_user).session_actions %>
  <% else %>
    <nav class="signed-out">
      <%= link_to t('helpers.submit.session.create'), new_session_path, class: 'action' %>
      <%= link_to t('helpers.submit.user.create'), new_user_path, class: 'action' %>
    </nav>
  <% end %>
</aside>
