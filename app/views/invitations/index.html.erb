<section class="invitations">
  <ul class="current-invitations">
    <% @invitations.each do |invitation| %>
      <li>
        <span class="title"><%= invitation.calendar.title %></span>
        <%= link_to(
          t('helpers.submit.permission.create'),
          permissions_path(invitation_id: invitation),
          method: :post,
          class: 'action'
        ) %>
      </li>
    <% end %>
  </ul>
</section>
